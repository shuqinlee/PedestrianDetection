%% get filter values
sigma = 25;
sigma4 = sigma*4;
[X, result] = gaussianDD(sigma);
%% read a picture into gray matrix

% test path: /Users/shuqinlee/Documents/PROJECT/Transportation/o3.png
rgb = imread('/Users/shuqinlee/Documents/PROJECT/Transportation/o3.png');
% imshow(rgb);
gray = rgb2gray(rgb);
figure(1);
imshow(gray);

%% pic convolution and plot the convolution result

convResult = zeros(3660, 1280);
for i = 1:3660
    
    for j = sigma4+1 :1280-sigma4
        arr = double(gray(i, j-sigma4:j+sigma4));
        sum = result * arr';
        convResult(i, j) = sum;
    end
%     i
end
figure(2);
scaleConv = 10000*convResult;
imshow(scaleConv);
title(['sigma' '=' int2str(sigma)]);
hold on

%% find path with given entry and plot it on the image
x = 554; 
y = 965;
entry = [x, y];
% while y < 3660 && 

lzero = (scaleConv(x,y) > 0);
p = zero(1, 3660);

% after the current time
while x < 3660 && y ~= 0
    x = x + 1;
    y = findNext(y, scaleConv(x, :), lzero);
    p(x) = y;
end

line(entry(1):x, [entry(2), p(entry(1)+1 : x)], 'LineWidth', 4, )


    


















        